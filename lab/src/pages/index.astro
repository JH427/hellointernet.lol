---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const experiments = await getCollection('experiments');
const sorted = experiments.sort((a, b) => b.data.id.localeCompare(a.data.id));
---

<BaseLayout title="Lab Experiments">
  <div class="page">
    <header class="intro">
      <h1>Experiments</h1>
      <p>Half-built tools and prototypes. Expect rough edges. Each entry links to a short note.</p>
    </header>

    <div class="list">
      {sorted.map((item) => (
        <a class="experiment" href={`/experiments/${item.data.id}`}>
          <div class="meta">
            <span class="id">{item.data.id}</span>
            <span class:list={['status', item.data.status]}>{item.data.status}</span>
            {item.data.timestamp && <span class="timestamp">{item.data.timestamp}</span>}
          </div>
          <div class="title">{item.data.title}</div>
          {item.data.link && (
            <div class="link-hint">Link included</div>
          )}
        </a>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .page { display: flex; flex-direction: column; gap: 1.5rem; }

  .intro p { max-width: 60ch; }

  .list { display: flex; flex-direction: column; gap: 1rem; }

  .experiment {
    display: block;
    padding: 1.25rem;
    border: 1px solid var(--border);
    border-radius: 4px;
    background: var(--surface);
    text-decoration: none;
    color: var(--text);
    transition: border-color 120ms ease, transform 120ms ease;
  }

  .experiment:hover { border-color: var(--accent); transform: translateY(-2px); }

  .meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.82rem;
    color: var(--text-dimmer);
    margin-bottom: 0.35rem;
  }

  .id { color: var(--accent); }

  .status {
    padding: 0.15rem 0.4rem;
    border: 1px solid var(--border);
    border-radius: 999px;
    text-transform: lowercase;
  }

  .status.active { border-color: #4c8b55; color: #9ad8a4; }
  .status.in-progress { border-color: #8b7355; color: var(--accent); }
  .status.paused { border-color: #6b6b66; color: var(--text-dim); }
  .status.archived { border-color: #3a3a37; color: var(--text-dimmer); }

  .timestamp { color: var(--text-dim); }

  .title { font-size: 1.1rem; margin-bottom: 0.25rem; }

  .link-hint {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.8rem;
    color: var(--text-dim);
  }
</style>

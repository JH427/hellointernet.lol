---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const notes = await getCollection('notes');
const sorted = notes.sort((a, b) => b.data.id.localeCompare(a.data.id));
---

<BaseLayout title="Notes | notes.hellointernet.lol">
  <div class="index text-slab">
    <header class="intro">
      <h1>Notes</h1>
      <p>Working notes, not a blog. Logged when useful.</p>
    </header>

    <div class="list">
      {sorted.map((note) => (
        <a class="note" href={`/${note.slug}`}>
          <div class="meta">
            <span class="id">{note.data.id}</span>
            <span class="title">{note.data.title}</span>
            {note.data.status !== 'published' && (
              <span class:list={['status', note.data.status]}>{note.data.status}</span>
            )}
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .index {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .intro p { color: var(--text-dim); }

  .list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .note {
    display: block;
    padding: 1rem 0;
    border-bottom: 1px solid var(--border);
    text-decoration: none;
    color: var(--text);
  }

  .note:last-child {
    border-bottom: none;
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .id {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.9rem;
    color: var(--accent);
  }

  .title {
    font-weight: 500;
    letter-spacing: -0.01em;
  }

  .status {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.8rem;
    padding: 0.15rem 0.4rem;
    border: 1px solid var(--border);
    border-radius: 999px;
    text-transform: lowercase;
    color: var(--text-dim);
  }

  .status.draft { border-color: #6b6b66; }
  .status.archived { border-color: #3a3a37; color: #3a3a37; }
</style>

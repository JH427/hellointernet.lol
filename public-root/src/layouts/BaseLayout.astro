---
interface Props {
  title?: string;
  showNav?: boolean;
}

const { title = 'hellointernet.lol', showNav = true } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600&family=IBM+Plex+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      {showNav && (
        <nav class="nav-pane">
          <div class="nav-content">
            <a href="/" class="site-title">hellointernet.lol</a>

            <div class="nav-section">
              <div class="nav-label">Primary</div>
              <a href="/work" class:list={['nav-link', { active: currentPath.startsWith('/work') }]}>work</a>
              <a href="/hire" class:list={['nav-link', { active: currentPath === '/hire' }]}>work with me</a>
            </div>

            <div class="nav-section">
              <div class="nav-label">Info</div>
              <a href="/resume" class:list={['nav-link', { active: currentPath === '/resume' }]}>resume</a>
              <a href="/about/no" class:list={['nav-link', { active: currentPath === '/about/no' }]}>no list</a>
              <a href="/about/faq" class:list={['nav-link', { active: currentPath === '/about/faq' }]}>faq</a>
            </div>

            <div class="nav-section">
              <div class="nav-label">External</div>
              <a href="#" class="nav-link disabled">store</a>
              <a href="#" class="nav-link disabled">links</a>
            </div>
          </div>
        </nav>
      )}

      <main class="main-pane">
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --bg: #0a0a0a;
    --text: #c4c4c0;
    --text-dim: #6b6b66;
    --text-dimmer: #3a3a37;
    --accent: #8b7355;
    --border: #1a1a1a;
    --surface: #121212;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html,
  body {
    height: 100%;
    background: var(--bg);
    color: var(--text);
    font-family: 'IBM Plex Sans', -apple-system, system-ui, sans-serif;
    font-size: 16px;
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
  }

  .container {
    display: grid;
    grid-template-columns: 240px 1fr;
    min-height: 100vh;
    width: 100%;
  }

  .nav-pane {
    border-right: 1px solid var(--border);
    padding: 2rem 0;
    position: sticky;
    top: 0;
    height: 100vh;
    overflow-y: auto;
  }

  .nav-content {
    padding: 0 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .site-title {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.875rem;
    color: var(--text);
    text-decoration: none;
    font-weight: 500;
  }

  .nav-section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .nav-label {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    color: var(--text-dimmer);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.25rem;
  }

  .nav-link {
    color: var(--text-dim);
    text-decoration: none;
    font-size: 0.9375rem;
    padding: 0.25rem 0;
    transition: color 0.15s;
  }

  .nav-link:hover {
    color: var(--text);
  }

  .nav-link.active {
    color: var(--accent);
  }

  .nav-link.disabled {
    opacity: 0.3;
    pointer-events: none;
  }

  .main-pane {
    padding: 4rem 3rem;
    width: 100%;
    overflow: visible;
  }

  h1 {
    font-size: 2rem;
    font-weight: 500;
    line-height: 1.2;
    color: var(--text);
    margin-bottom: 1.5rem;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 500;
    line-height: 1.3;
    color: var(--text);
    margin-bottom: 1rem;
  }

  h3 {
    font-size: 1.125rem;
    font-weight: 500;
    line-height: 1.4;
    color: var(--text);
    margin-bottom: 0.75rem;
  }

  p {
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  a {
    color: var(--accent);
    transition: opacity 0.15s;
  }

  a:hover {
    opacity: 0.7;
  }

  code {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.875em;
    background: var(--surface);
    padding: 0.125rem 0.375rem;
    border-radius: 3px;
  }

  @media (max-width: 768px) {
    .container {
      grid-template-columns: 1fr;
    }

    .nav-pane {
      position: static;
      height: auto;
      border-right: none;
      border-bottom: 1px solid var(--border);
      padding: 1.5rem 0;
    }

    .nav-content {
      flex-direction: row;
      flex-wrap: wrap;
      gap: 1.5rem;
    }

    .nav-section {
      gap: 0.375rem;
    }

    .main-pane {
      padding: 2rem 1.5rem;
    }
  }
</style>
